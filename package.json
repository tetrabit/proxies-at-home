{
  "name": "mtg-proxy-builder",
  "version": "0.0.0",
  "description": "Proxxied",
  "main": "electron/dist/main.js",
  "private": true,
  "bin": {
    "release": "./scripts/release.mjs"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev --prefix client\" \"npm run dev --prefix server\"",
    "electron:dev": "concurrently \"npm run dev --prefix client\" \"npm run build --prefix server && tsc -p electron/tsconfig.json && wait-on http://localhost:5173 && cross-env NODE_ENV=development electron electron/dist/main.js\"",
    "electron:build": "npm run build --prefix client && npm run build --prefix server && tsc -p electron/tsconfig.json && electron-builder",
    "electron:build:win": "npm run build --prefix client && npm run build --prefix server && cd server/node_modules/better-sqlite3 && npx prebuild-install --platform win32 --arch x64 --runtime electron --target 39.0.0 && cd ../../.. && tsc -p electron/tsconfig.json && electron-builder --win && cd server && npm rebuild better-sqlite3 && cd ..",
    "release": "node scripts/release.mjs",
    "release:dry": "node scripts/release.mjs --dry-run",
    "release:patch": "node scripts/release.mjs --patch",
    "release:minor": "node scripts/release.mjs --minor",
    "release:major": "node scripts/release.mjs --major",
    "release:promote": "node scripts/release.mjs --promote-stable",
    "release:revert": "node scripts/release.mjs --revert",
    "generate:api-types": "node scripts/generate-api-types.js",
    "generate:api-client": "node scripts/generate-api-client.js",
    "test:contract": "tsx --test tests/contract/scryfall-api.test.ts"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.28.5",
    "@openapitools/openapi-generator-cli": "^2.28.2",
    "@playwright/test": "^1.57.0",
    "baseline-browser-mapping": "^2.9.19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "dredd": "^14.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "jest": "^30.2.0",
    "openapi-typescript": "^7.10.1",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.proxiesathome.app",
    "productName": "Proxxied",
    "asar": true,
    "directories": {
      "output": "dist-app"
    },
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "publish": {
      "provider": "github",
      "owner": "kclipsto",
      "repo": "proxies-at-home"
    },
    "extraResources": [
      {
        "from": "server/dist",
        "to": "server/dist"
      },
      {
        "from": "server/node_modules",
        "to": "server/node_modules"
      },
      {
        "from": "server/package.json",
        "to": "server/package.json"
      }
    ],
    "files": [
      "electron/dist/**/*",
      "electron/package.json",
      "client/dist/**/*",
      "package.json"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "client/public/pwa-512x512.png"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "client/public/pwa-512x512.png",
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis",
      "icon": "client/public/pwa-512x512.png"
    }
  },
  "keywords": [],
  "author": "Nathan <nathan@example.com>",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@babel/preset-env": "^7.28.5",
    "@eslint/js": "^9.39.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-virtual": "^3.13.13",
    "@testing-library/react": "^16.3.1",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "axios": "^1.11.0",
    "axios-retry": "^4.5.0",
    "bottleneck": "^2.19.5",
    "canvas": "^3.2.0",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dexie-react-hooks": "^4.2.0",
    "electron-updater": "^6.6.2",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "express": "^5.2.1",
    "flowbite-react": "^0.12.15",
    "jsdom": "^27.4.0",
    "lucide-react": "^0.562.0",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "zod": "^4.2.1",
    "zustand": "^5.0.9"
  }
}
