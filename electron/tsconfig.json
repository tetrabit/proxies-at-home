{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "incremental": true,
        "tsBuildInfoFile": "./.tsbuildinfo/tsconfig.tsbuildinfo",
        "outDir": "dist",
        "rootDir": ".",
        "declaration": false,
        "resolveJsonModule": true
    },
    "include": [
        "main.ts",
        "preload.cts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
