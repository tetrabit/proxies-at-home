{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "incremental": true,
        "tsBuildInfoFile": "./.tsbuildinfo/tsconfig.build.tsbuildinfo",
        "target": "ES2022",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "declaration": false
    },
    "include": [
        "src/**/*",
        "../shared/**/*"
    ],
    "exclude": [
        "src/**/*.test.ts",
        "src/repro_*.ts"
    ]
}
